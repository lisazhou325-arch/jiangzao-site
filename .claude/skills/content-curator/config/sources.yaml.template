# API Keys and Credentials
api_keys:
  # BibiGPT API key (required for Bilibili and Xiaoyuzhou)
  # Get your key at: https://bibigpt.co
  bibigpt: "your_bibigpt_api_key_here"

  # Feishu (Lark) credentials (optional, for Bitable sync)
  # Get from: https://open.feishu.cn/app
  feishu:
    app_id: "cli_xxx"
    app_secret: "xxx"
    # From Bitable URL: https://xxx.feishu.cn/base/bascnxxx?table=tblxxx
    bitable_app_token: "bascnxxx"
    table_id: "tblxxx"

# Global Settings
settings:
  # Output directory for archived content
  output_dir: "./output"

  # Auto sync to Feishu after processing
  auto_sync_feishu: true

  # Download cover images
  download_covers: true

  # Minimum duration filter (minutes)
  default_min_duration: 30

  # Maximum items to fetch per source in batch mode
  default_batch_limit: 10

# Content Sources
sources:
